<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smith.split.Item_split">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/money_add"
            android:layout_width="78dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="135dp"
            android:ems="10"
            android:hint="$$"
            android:inputType="numberDecimal"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="290dp"
            tools:layout_editor_absoluteY="54dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/money_add"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="12dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:id="@+id/name_item_split" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/name_item_split"
            android:layout_centerVertical="true"
            android:text="@string/add_button" />

    </RelativeLayout>
    <ListView
        android:id="@+id/listv"
        android:layout_width=""
        android:layout_height=""></ListView>
</android.support.constraint.ConstraintLayout>
