<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smith.split.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="382dp"
        android:layout_height="519dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/top_button"
            android:layout_width="354dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:onClick="buttonAction"
            android:text="@string/top_button"
            app:layout_constraintBottom_toTopOf="@+id/bottom_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bottom_button"
            android:layout_width="355dp"
            android:layout_height="0dp"
            android:layout_marginBottom="19dp"
            android:paddingBottom="0dp"
            android:text="@string/bottom_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_button" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
